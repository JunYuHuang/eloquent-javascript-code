{
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "lib": ["es6", "dom"],
      "allowJs": false,
      "outDir": "build/code",
      "rootDir": "src",
      "strict": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "types": ["node", "jest", "@types/jest", "@types/node"],
      "skipLibCheck": true,
      "sourceMap": true,
      "typeRoots": [ "./src"]
    },
    "include": ["src/**/*"],
    // "exclude": ["src/**/*.spec.ts"]
}
  